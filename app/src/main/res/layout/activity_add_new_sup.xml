<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".goods.AddNewSup">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الرجاء ادخال بيانات الاستلام"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:padding="10dp"
        android:weightSum="100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="أسم المورد"
            android:textColor="#03A9F4"
            android:textSize="18sp"
            android:layout_weight="30"
            />

        <EditText
            android:id="@+id/supplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="اسم المورد"
            android:singleLine="true"
            android:textSize="14dp"
            android:width="120dp"
            android:layout_weight="60"
            android:background="@drawable/edittext"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/addSup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_person_add"
            android:layout_marginRight="15dp"
            android:layout_weight="5"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:weightSum="100">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم الفاتورة"
            android:textSize="18sp"
            android:textColor="#03A9F4"
            android:layout_weight="15"
            />

        <EditText
            android:id="@+id/billNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:width="50dp"
            android:background="@drawable/edittext"
            android:hint="454752.."
            android:textSize="14dp"
            android:inputType="number" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:weightSum="100">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاريخ الإستلام"
            android:textSize="18sp"
            android:textColor="#03A9F4"
            android:layout_weight="30"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:hint="يوم/شهر/سنة"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:textColor="#726F6F"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="أضافة"
            android:onClick="AddNew"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>