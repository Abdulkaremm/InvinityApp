<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExportAPurchaseBill.CreateNewBillActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الرجاء ادخال بيانات الفاتورة"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:padding="10dp"
        android:weightSum="100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="أسم الزبون"
            android:textColor="#03A9F4"
            android:textSize="18sp"
            android:layout_weight="30"
            />

        <EditText
            android:id="@+id/client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="الرجاء ادخال اسم الزبون او أختياره"
            android:singleLine="true"
            android:textSize="14dp"
            android:width="120dp"
            android:layout_weight="60"
            android:background="@drawable/edittext"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/AddClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_person_add"
            android:layout_marginRight="15dp"
            android:layout_weight="5"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="أضافة"
            android:onClick="AddNew"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>