<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="150"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/title_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الكمية"
        android:padding="20dp"
        android:textSize="14sp"
        android:textColor="@color/colorMain"/>

    <LinearLayout
        android:layout_below="@+id/title_q"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="90" >

        <EditText
            android:id="@+id/quntity"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="0"
            android:inputType="number"
            android:padding="5dp"
            android:selectAllOnFocus="true"
            android:text="1"
            android:textAlignment="center"
            android:textCursorDrawable="@color/colorMain"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/plus"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_success"
                android:onClick="plus"
                android:text="+"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/mines"
                android:layout_width="30dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_danger"
                android:onClick="mines"
                android:text="-"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_q"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="31dp"
        android:padding="20dp"
        android:text="تاريخ الصلاحية"
        android:textColor="@color/colorMain"
        android:textSize="14sp" />

     <LinearLayout
        android:id="@+id/npikers"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="150">

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center"
             android:layout_marginBottom="20dp">

             <com.shawnlin.numberpicker.NumberPicker
                 android:id="@+id/year"
                 android:layout_width="70dp"
                 android:layout_height="120dp"
                 android:layout_weight="20"
                 android:layout_marginRight="10dp"
                 app:np_textSize="10sp"
                 android:layout_marginLeft="10dp"
                 app:np_dividerColor="@color/colorMain"
                 app:np_textColor="@color/colorMain"
                 app:np_formatter="%02d"
                 />
             <com.shawnlin.numberpicker.NumberPicker
                 android:id="@+id/mont"
                 android:layout_width="40dp"
                 android:layout_height="120dp"
                 app:np_textSize="10sp"
                 android:layout_weight="20"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="10dp"
                 app:np_dividerColor="@color/colorMain"
                 app:np_textColor="@color/colorMain"
                 app:np_formatter="%02d"
                 />

             <com.shawnlin.numberpicker.NumberPicker
                 android:id="@+id/day"
                 android:layout_width="40dp"
                 android:layout_height="120dp"
                 app:np_textSize="10sp"
                 android:layout_weight="20"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="10dp"
                 app:np_dividerColor="@color/colorMain"
                 app:np_textColor="@color/colorMain"
                 app:np_formatter="%02d"
                 />

         </LinearLayout>



    </LinearLayout>
    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="الرجاء إدخال كمية صالحة"
        android:textColor="@color/colorDanger"
        android:textSize="12sp"
        android:visibility="invisible"
        android:layout_below="@+id/npikers"
        />

    <LinearLayout
        android:layout_below="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="50"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/pikDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="موافق"
            android:background="@drawable/bordermain"
            android:textSize="20sp"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="@color/colorMain"
            android:layout_weight="25"
            />


        <TextView
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="إلغاء"
            android:textSize="20sp"
            android:padding="20dp"
            android:gravity="center"
            android:background="@drawable/bordermain"
            android:textColor="@color/colorMain"
            android:layout_weight="25"
            />

    </LinearLayout>


</RelativeLayout>